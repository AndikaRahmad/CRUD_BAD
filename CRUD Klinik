    private void tglPropertyChange(java.beans.PropertyChangeEvent evt) {                                   
if(tgl.getDate()!=null){
    SimpleDateFormat format=new SimpleDateFormat("yyyy-MM-dd");
    tgl_lahir=format.format(tgl.getDate());
}
    }                                  

    private void save_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                            
try {
    String sql = "insert into tb_pasien values ('"
            +no_field.getText()+"','"
            +nama_field.getText()+"','"
            +nik_field.getText()+"','"
            +tgl+"','"
            +alamat_field.getText()+"')'";
    java.sql.Connection conn = (java.sql.Connection) projectTP1.Koneksi.koneksiDB();
    java.sql.PreparedStatement pst = conn.prepareStatement(sql);
            pst.executeUpdate();
            JOptionPane.showMessageDialog(null,"berhasil disimpan");
            tampil_data();
            
}
catch (Exception e){
    JOptionPane.showMessageDialog(null,"gagal disimpan");
    System.out.println(e.getMessage());
}
    }                                           

    private void edit_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                            
 Try{
            String sql=”insert into tbdata values(‘”
                    +no_field.getText()+"','"
                    +nama_field.getText()+"','"
                    +nik_field.getText()+"','"
                    +tgl+"','"
                    +tgl_lahir+”’,’”
                    +alamat_field.getText()+"')'";
                 Java.sql.Connection conn=(java.sql.Connection)projek.Koneksi.koneksiDB();
            Java.sql.PreparedStatement pst=conn.prepareStatement(sql);
            Pst.execute();
            JOptionPane.showMessageDialog(null, “Berhasil disimpan”);
            Tampil_data();
        }
        Catch (Exception e){
            JOptionPane.showMessageDialog(null, “Gagal disimpan”);
            System.out.println(e.getMessage());
        // TODO add your handling code here:
    }                                           

    private void cancel_butoonActionPerformed(java.awt.event.ActionEvent evt) {                                              
 Nim.setText(“”);
        Nama.setText(“”);
        Gender.setSelectedItem(“”);
        Tempat.setText(“”);
        Tgl.setDate(null);
        Alamat.setText(“”);
        Hp.setText(“”);
        Nim.requestFocus();  

    }                                             

    public void tampil_data(){
        DefaultTableModel tabel = new DefaultTableModel();
        tabel.addColumn("No");
        tabel.addColumn("Nama Pasien");
        tabel.addColumn("NIK");
        tabel.addColumn("Tanggal Lahir");
        tabel.addColumn("Alamat");
        try {
            java.sql.Connection conn = (java.sql.Connection) projectTP1.Koneksi.koneksiDB();
            String sql = "select * From tb_pasien";
            java.sql.PreparedStatement pst = conn.prepareStatement(sql);
            ResultSet rs = pst.executeQuery(sql);
            while (rs.next())
            {
                tabel.addColumn(new Object[]{
                    rs.getString(1),
                    rs.getString(2),
                    rs.getString(3),
                    rs.getString(4),
                    rs.getString(5)});
                
                }
            jTable1.setModel(tabel);
            }
        catch (Exception e){
                
            
        }
    }
    
    
    
    
