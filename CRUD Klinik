    private void search_buttonActionPerformed(java.awt.event.ActionEvent evt) {                                              
Try {
    java.sql.Connection conn = (java.sql.Connection) projectTP1.Koneksi.koneksiDB();
    String sql = “Select * from tb_pasien where no_field=’”+search_field.getText()+”’”;
    java.sql.PreparedStatement pst = conn.prepareStatement(sql);
    ResultSet rs = pst.executeQuery(sql);
    If (rs.next()){
        no_field.setText(rs.getString(1));
        nama_field.setText(rs.getString(2));
        nik_field.setText(rs.getString(3));
        tgl.setDate(rs.getDate(4));
        alamat_field.setText(rs.getString(5));
        JOptionPane.showMessageDialog(null,”Data tb_pasien : “
        + cari.getText() + “ ditemukan, Apakah Anda Ingin Mengedit atau Menghapus?”);
    }
} catch (Exception e){}
Cari.requestFocus();

    }                                             

